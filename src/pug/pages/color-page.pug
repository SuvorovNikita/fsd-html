extends ../layout/main

block content
  section-color
    .container-alt
      .logo 
        img(src="assets/img/logo.png" alt="")
    .container
      section-type      
        .section-color
          .wrapper
            .section-color__black
            h1 Dark Shade 100% <span> #1F2041
          .wrapper
            .section-color__gray
            h1 Dark Shade 75% <span> #1F2041               
          .wrapper
            .section-color__gray-alt
            h1 Dark Shade 50% <span> #1F2041 
          .wrapper
            .section-color__silver
            h1 Dark Shade 25% <span> #1F2041 
          .wrapper
            .section-color__white
            h1 Dark Shade 5% <span> #1F2041 
          .wrapper
            .section-color__purple
            h2 Purbe <span> #BC9CFF
          .wrapper
            .section-color__green  
            h2 Green <span> #6FCF97   
                    
        .section-type
          .wrapper  
            h1.h1 h1 
            h1.text This one is the sub-section or widget title 
          .wrapper
            h2.h2 h2 
            h2.text-alt Next one is the item title inside widgets
          .wrapper  
            h3.h3 h3 
            h3.text-2 This is a label or CTA text
          .wrapper  
            h4.h4 body 
            h4.body This is the body text which is used for most of the design, like paragraphs, lists, etc.

